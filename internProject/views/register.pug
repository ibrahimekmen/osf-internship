doctype html 
html(lang="en")
head
    title MyClothes
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We' crossorigin='anonymous')
body
    header
        .container.pt-3
            .row
                .col-10
                    h1.display-1 MyClothes
    .main.container
        .row
            .col-md-6.col-md-offset-3
            h1.display-4.m-b-2.mt-4 Sign Up

            // register form
            form(method='POST' action='/register')
                div.form-group
                label.mt-3(for='name') Name:
                input#name.form-control(type='text', placeholder='first and last' name='name')
                div.form-group
                label.mt-3(for='email') Email:
                input#email.form-control(type='email', placeholder='name@email.com' name='email')
                div.form-group
                label.mt-3(for='pw') Password:
                input#pw.form-control(type='password' name='password')
                div.form-group
                label.mt-3(for='pw2') Confirm Password:
                input#pw2.form-control(type='password' name='confirmPassword')
                button.btn.btn-dark.mt-3(type='submit') Sign up
    include includes/footer.pug
