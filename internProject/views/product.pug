extends layout.pug

block content
    body
        .container
            .row
                h6 #{product.name}
                .col-4
                    img.img-fluid.rounded.d-none.d-lg-block(src=`/static/images/${product.image_groups[0].images[0].link}` alt=`${product.image_groups[0].images[0].alt}`)
                .col-8
                    p #{product.long_description}
                    .row
                        .col
                            a.btn.btn-dark(href='' role='button') Buy Now
                        .col
                            .row
                                .col
                                    p Price: #{product.price}
                                .col
                                    select.form-select(aria-label='Default select example')
                                        option(value='1') USD
                                        option(value='2') EUR
                                        option(value='3') TL
                                        option(value='4') BRL
